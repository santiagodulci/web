    <!-- Modal del Carrito -->
    <div class="modal" id="cartModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Tu Carrito de Compras</h2>
                <span class="close">&times;</span>
            </div>
            <div class="cart-items" id="cartItems">
                <!-- Los items del carrito se cargar√°n din√°micamente -->
                <p>Tu carrito est√° vac√≠o</p>
            </div>
            <div class="cart-total" id="cartTotal">
                Total: $0.00
            </div>
            <button class="btn" id="checkoutBtn">Proceder al Pago</button>
        </div>
    </div>

    <script>
        // Datos de productos (simulando una base de datos)
        const products = [
            {
                id: 1,
                title: "Zapatillas Deportivas",
                price: 59.99,
                description: "Zapatillas c√≥modas para correr o hacer ejercicio.",
                image: "https://via.placeholder.com/300x200?text=Zapatillas"
            },
            {
                id: 2,
                title: "Smartphone X",
                price: 499.99,
                description: "El √∫ltimo smartphone con c√°mara de alta resoluci√≥n.",
                image: "https://via.placeholder.com/300x200?text=Smartphone"
            },
            {
                id: 3,
                title: "Port√°til Ultra",
                price: 899.99,
                description: "Port√°til ligero con gran potencia y autonom√≠a.",
                image: "https://via.placeholder.com/300x200?text=Portatil"
            },
            {
                id: 4,
                title: "Auriculares Inal√°mbricos",
                price: 129.99,
                description: "Sonido de alta calidad con cancelaci√≥n de ruido.",
                image: "https://via.placeholder.com/300x200?text=Auriculares"
            },
            {
                id: 5,
                title: "Reloj Inteligente",
                price: 199.99,
                description: "Monitoriza tu actividad f√≠sica y notificaciones.",
                image: "https://via.placeholder.com/300x200?text=Reloj"
            },
            {
                id: 6,
                title: "Mochila Resistente",
                price: 49.99,
                description: "Mochila impermeable con m√∫ltiples compartimentos.",
                image: "https://via.placeholder.com/300x200?text=Mochila"
            }
        ];

        // Variables del carrito
        let cart = [];
        const cartIcon = document.getElementById('cartIcon');
        const cartCount = document.getElementById('cartCount');
        const cartModal = document.getElementById('cartModal');
        const closeModal = document.querySelector('.close');
        const cartItems = document.getElementById('cartItems');
        const cartTotal = document.getElementById('cartTotal');
        const checkoutBtn = document.getElementById('checkoutBtn');
        const productGrid = document.getElementById('productGrid');

        // Cargar productos en la p√°gina
        function loadProducts() {
            productGrid.innerHTML = '';
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <img src="${product.image}" alt="${product.title}" class="product-image">
                    <div class="product-info">
                        <h3 class="product-title">${product.title}</h3>
                        <p class="product-price">$${product.price.toFixed(2)}</p>
                        <p class="product-description">${product.description}</p>
                        <button class="btn add-to-cart" data-id="${product.id}">A√±adir al Carrito</button>
                    </div>
                `;
                productGrid.appendChild(productCard);
            });

            // A√±adir event listeners a los botones
            document.querySelectorAll('.add-to-cart').forEach(button => {
                button.addEventListener('click', addToCart);
            });
        }

        // A√±adir producto al carrito
        function addToCart(e) {
            const productId = parseInt(e.target.getAttribute('data-id'));
            const product = products.find(p => p.id === productId);
            
            // Verificar si el producto ya est√° en el carrito
            const existingItem = cart.find(item => item.id === productId);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    ...product,
                    quantity: 1
                });
            }
            
            updateCart();
        }

        // Actualizar el carrito
        function updateCart() {
            // Actualizar contador
            const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
            cartCount.textContent = totalItems;
            
            // Guardar carrito en localStorage
            localStorage.setItem('cart', JSON.stringify(cart));
        }

        // Mostrar el carrito
        function showCart() {
            cartItems.innerHTML = '';
            
            if (cart.length === 0) {
                cartItems.innerHTML = '<p>Tu carrito est√° vac√≠o</p>';
                cartTotal.textContent = 'Total: $0.00';
            } else {
                let total = 0;
                
                cart.forEach(item => {
                    const itemTotal = item.price * item.quantity;
                    total += itemTotal;
                    
                    const cartItem = document.createElement('div');
                    cartItem.className = 'cart-item';
                    cartItem.innerHTML = `
                        <img src="${item.image}" alt="${item.title}">
                        <div class="cart-item-info">
                            <div class="cart-item-title">${item.title}</div>
                            <div>$${item.price.toFixed(2)} x ${item.quantity}</div>
                        </div>
                        <div class="cart-item-price">$${itemTotal.toFixed(2)}</div>
                        <div class="remove-item" data-id="${item.id}">üóëÔ∏è</div>
                    `;
                    cartItems.appendChild(cartItem);
                });
                
                cartTotal.textContent = `Total: $${total.toFixed(2)}`;
                
                // A√±adir event listeners a los botones de eliminar
                document.querySelectorAll('.remove-item').forEach(button => {
                    button.addEventListener('click', removeFromCart);
                });
            }
            
            cartModal.style.display = 'flex';
        }

        // Eliminar producto del carrito
        function removeFromCart(e) {
            const productId = parseInt(e.target.getAttribute('data-id'));
            cart = cart.filter(item => item.id !== productId);
            updateCart();
            showCart();
        }

        // Proceder al pago
        function checkout() {
            if (cart.length === 0) {
                alert('Tu carrito est√° vac√≠o');
                return;
            }
            
            alert(`Gracias por tu compra! Total: $${calculateTotal().toFixed(2)}`);
            cart = [];
            updateCart();
            showCart();
            cartModal.style.display = 'none';
        }

        // Calcular total del carrito
        function calculateTotal() {
            return cart.reduce((total, item) => total + (item.price * item.quantity), 0);
        }

        // Cargar carrito desde localStorage
        function loadCart() {
            const savedCart = localStorage.getItem('cart');
            if (savedCart) {
                cart = JSON.parse(savedCart);
                updateCart();
            }
        }

        // Event Listeners
        cartIcon.addEventListener('click', showCart);
        closeModal.addEventListener('click', () => {
            cartModal.style.display = 'none';
        });
        checkoutBtn.addEventListener('click', checkout);

        // Cerrar modal al hacer clic fuera del contenido
        window.addEventListener('click', (e) => {
            if (e.target === cartModal) {
                cartModal.style.display = 'none';
            }
        });

        // Inicializar la p√°gina
        loadProducts();
        loadCart();
    </script>
</body>
</html>
